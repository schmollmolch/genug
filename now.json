{
    "version": 2,
    "scope": "genug",
    "alias": "genug.co",
    "routes": [
        {
            "src": "/api/(?<func>[^/]+)/(?<id>[^/]+)",
            "dest": "/functions/$func?id=$id"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "builds": [
        {
            "src": "./functions/**/*.ts",
            "use": "@now/node"
        },
        {
            "src": "./frontend/package.json",
            "use": "@now/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ]
}